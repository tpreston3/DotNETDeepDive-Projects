@model Resume.Models.Job

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Job</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.EmployerName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EmployerName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.JobTitle)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StopDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StopDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.JobDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.JobDescription)
        </dd>
        <dt>
            Accomplishments
        </dt>
        <dd>
            @if (Model.Accomplishments != null)
            {
               
                <ul>
                    @foreach(var accomplishment in Model.Employments.Jobs)
                    {
                        <li>
                            @accomplishment.Accomplishments
                        </li>

                    }
                </ul>

            }else
            {
                <p>
                    No Accomplishments entered
                </p>

            }

</dl>


</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
