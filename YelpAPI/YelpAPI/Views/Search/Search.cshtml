@model YelpAPI.Models.YelpSearch

@{
    ViewData["Title"] = "Search";
}

<h2>Search</h2>

<form asp-action="Search">
    <div class="form-horizontal">
        <h4>YelpSearch</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Term" class="col-md-2 control-label"></label> 
            <div class="col-md-10">
                <input asp-for="Term" class="form-control" value="Chicken Wings"/>
                <span asp-validation-for="Term" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Location" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Location" class="form-control" value="87031"/>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
